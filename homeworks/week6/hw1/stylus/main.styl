/* general */
body
    background-color #BFD7EA
    font-family: 'Nunito', sans-serif;

li
    list-style-type: none

a
    text-decoration none

.button
    box-sizing: border-box
    line-height 1.75
    display inline-block
    border 0 solid #000
    border-radius 4px
    padding 3px 8px
    text-align center
    font-size 14px
    width 80px
    height 30px
    background #2B2D42
    color #FAFAFA
    transition 0.3s ease
    &:hover
        background-color #8D99AE

#header 
    position fixed
    display: flex
    flex-direction: row
    justify-content: space-around
    width 100%
    height: 80px
    background-color #2B2D42
    &__logo
        display flex
        flex-direction: row
        justify-content: space-between
        width 180px
        h1
            font-weight 700
            letter-spacing: 1px

        &--english
            color #FAFAFA
        &--chinese
            color #BFD7EA

    &__nav
        li
            display inline
            > a
                text-decoration none
                color #FBF5F3

#footer
    width 100%
    bottom 0px
    text-align center
    background-color #40434E
    color #FBF5F3
    height 80px
    &__copy
        padding 32px
        font-size 14px
        font-weight 300

.absolute
    position absolute
    bottom 0px

.forum
    &__input
        padding: 20px 20px 0
    &__content
        text-align right
        textarea
            display block
            width 98%
            margin 0 auto
        input
            margin-top: 10px
    
    &__post
        box-shadow:10px 10px 10px rgba(20%,20%,40%,0.5)
        border-radius 8px
        padding 30px
        margin: 20px
        background #E8EEF2
        
        &--output
            margin 20px

    &__comment
        &--input
            textarea
                display block
                width 98%
                margin 0 auto
            input
                margin-top: 10px
                &[type="radio"]
                    display none
        &--content
            text-align right
        &--output
            background  #FAFAFA
            border-radius 5px
            padding 10px
            margin: 20px
               
.post
    &__info
        display flex
        flex-direction: row
        justify-content space-between
    &__content
        background  #FAFAFA
        border-radius 5px
        padding 10px
        
        display: flex;
        justify-content space-between

        &--modify
            display: flex;
            
            input
                margin-top 20px
                margin-left: 5px

.comment
    &__info
        display flex
        flex-direction row
        justify-content space-between
    &__content
        display: flex;
        justify-content space-between
        margin-top: 10px

        &--modify
            display: flex;
            input
                margin-top 20px
                margin-left: 5px
        

.float
    border-radius 6px
    opacity 0.3
    position fixed
    background-color #fff
    right 20px
    bottom 20px
    transition 0.5s ease
    display flex
    flex-direction column
    text-align center
    padding 10px
    background-color #2B2D42
    a
        color #FAFAFA
    &:hover
        opacity .9
        
.box
    box-shadow:10px 10px 10px rgba(20%,20%,40%,0.5)
    background-color #FBF5F3
    padding 20px
    width 280px
    height 120px
    text-transform uppercase
    text-align center

    &__button
        margin 10px auto 0
    
    

@media (min-width :320px) and (max-width : 768px) 
    main
        padding-top 80px
    
    .box
        padding 20px
        margin 175px auto 0
        background-color #FAFAFA
        &__button
            margin 10px auto 0
        

@media (min-width: 769px) and (max-width : 1023px) 
    main
        padding-top 80px
    
    .container
        width 90%
        margin 0 auto

    .box
        margin 225px auto 0
        padding 20px
        width 300px
        height 100px
        background-color #FAFAFA
        max-height 100%

@media (min-width: 1024px) 
    main
        padding-top 80px
    
    .container
        max-width 1024px
        margin 0 auto
        
    .box
        margin 250px auto 0
        padding 20px
        width 300px
        height 100px
        background-color #FAFAFA
        max-height 100%