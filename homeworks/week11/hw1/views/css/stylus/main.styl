/* general */
html
    height 100%
body
    background-color #BFD7EA
    font-family: 'Nunito', sans-serif;
    width 100%
    height 100%
    margin:0
    display flex
    justify-content: center

li
    list-style-type: none

a
    text-decoration none

.button
    box-sizing: border-box
    line-height 1.75
    display inline-block
    border 0 solid #000
    border-radius 4px
    padding 3px 8px
    text-align center
    font-size 14px
    width 80pxd
    height 30px
    background #2B2D42
    color #FAFAFA
    transition 0.3s ease
    &:hover
        background-color #8D99AE

#header 
    position fixed
    display: flex
    flex-direction: row
    justify-content: space-around
    width 100%
    height: 80px
    background-color #2B2D42
    &__logo
        display flex
        flex-direction: row
        justify-content: space-between
        width 180px
        h1
            font-weight 700
            letter-spacing: 1px

        &--english
            color #FAFAFA
        &--chinese
            color #BFD7EA

    &__nav
        li
            display inline
            > a
                text-decoration none
                color #FBF5F3

#footer
    width 100%
    bottom 0px
    text-align center
    background-color #40434E
    color #FBF5F3
    height 80px
    &__copy
        padding 32px
        font-size 14px
        font-weight 300

.absolute
    position absolute
    bottom 0px

.wrapper
    margin 100px
    display flex
    justify-content: center;
    align-items: center;

.box
    box-sizing: border-box
    padding 20px 60px
    max-width 360px
    max-height 400px
    box-shadow:10px 10px 10px rgba(20%,20%,40%,0.5)
    background-color #FAFAFA
    text-transform uppercase
    text-align center

    form
        padding 10px
        label 
            display block
            margin-top 7px

    &__button
        margin 10px auto 0
    
    

