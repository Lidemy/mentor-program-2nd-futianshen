button-width = 30px
board-width = button-width*19

.game
  display flex
  justify-content center
  &__board
    display flex
    flex-flow row wrap
    border 2px solid #000
    width board-width
    
    button
      background-color #6B4228
      border 0.5px solid #000
      outline unset
      margin 0
      padding 0
      width button-width
      height @width

  &__info
    margin-left 30px

  &__player
    width 200px

.chess
  &--black
    margin 0 auto
    border-radius 9px
    width 18px
    height @width
    background-color black
  
  &--white
    margin 0 auto
    border-radius 9px
    width 18px
    height @width
    background-color white
  

  